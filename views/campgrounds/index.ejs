<% layout ("layout/boilerplate") -%>

<div id="cluster-map" class="mb-5"></div>

<h1> All Campgrounds </h1>

<% for (let camp of campgrounds) {%>
    
    <div class="card mb-3">

        <div class="row">
            
            <div class="col-md-4 mb-2">
                <% if (camp.images.length) {%> 
                    <img class="camp-img" alt="" src="<%=camp.images[0].url%>">
                <%} else {%>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/drej1gfby/image/upload/v1634703937/YelpCamp/campground1_rew6oe.jpg" style="max-width: 100%">
                    <%}%>
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><a href="/campgrounds/<%=camp._id%>"><%=camp.title%></a></h5>
                    <p class="card-text"><%=camp.description%></p>
                    <p class="card-text">
                        <small class="text-muted"><%=camp.location%></small>
                    </p>
                    <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary mt-2">Explore now</a>
                </div>
            </div>

        </div>
    </div>
<%}%>

<a href="/campgrounds/new">Add New Campground</a>

<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %> ";
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>